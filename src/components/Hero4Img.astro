<section class="relative h-screen flex items-center justify-center overflow-hidden">
    <div id="image-container" class="absolute inset-0 z-0 transition-opacity duration-1000 ease-in-out">
      <img 
        src="https://images.pexels.com/photos/3985298/pexels-photo-3985298.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
        alt="Aesthetic treatment" 
        class="object-cover w-full h-full"
      />
    </div>
    
    <div class="relative z-10 text-white text-center px-4 md:px-0">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">Transform Your Beauty</h1>
      <p class="text-xl md:text-2xl mb-8">Experience our advanced aesthetic solutions</p>
      <a href="#" class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded-full transition duration-300">
        Book Consultation
      </a>
    </div>
  
    <div class="absolute bottom-0 left-0 right-0 bg-teal-800 bg-opacity-80 p-4 md:p-6">
      <form class="flex flex-col md:flex-row justify-center items-center space-y-4 md:space-y-0 md:space-x-4">
        <input type="text" placeholder="Your Name" class="p-2 rounded w-full md:w-auto"/>
        <input type="email" placeholder="Your Email" class="p-2 rounded w-full md:w-auto"/>
        <button type="submit" class="bg-white text-teal-800 font-bold py-2 px-4 rounded hover:bg-gray-200 transition duration-300 w-full md:w-auto">
          Get in Touch
        </button>
      </form>
    </div>
  </section>
  
  <script is:inline>
    const images = [
      "https://images.pexels.com/photos/3985298/pexels-photo-3985298.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
      "https://images.pexels.com/photos/3757940/pexels-photo-3757940.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
      "https://images.pexels.com/photos/5452231/pexels-photo-5452231.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
      "https://images.pexels.com/photos/3993248/pexels-photo-3993248.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
    ];
  
    let currentImageIndex = 0;
  
    function changeImage() {
      const imageContainer = document.getElementById("image-container");
      const nextImage = images[currentImageIndex];
      imageContainer.querySelector("img").src = nextImage;
      currentImageIndex = (currentImageIndex + 1) % images.length;
    }
  
    setInterval(changeImage, 5000);
  </script>
  