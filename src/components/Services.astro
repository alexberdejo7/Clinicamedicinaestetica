---
// src/components/TreatmentCards.astro
import { treatments } from '../utils/servicesdata';
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
  {treatments.map((treatment) => (
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-2 text-gray-800">{treatment.title}</h2>
        <p class="text-gray-600 mb-4">{treatment.description}</p>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="w-6 h-6 mr-2 text-gray-600">
            <circle cx="50" cy="50" r="45" fill="none" stroke="currentColor" stroke-width="5" />
            <line x1="50" y1="50" x2="50" y2="25" stroke="currentColor" stroke-width="3" stroke-linecap="round">
              <animateTransform
                attributeName="transform"
                attributeType="XML"
                type="rotate"
                from="0 50 50"
                to="360 50 50"
                dur="60s"
                repeatCount="indefinite"
              />
            </line>
            <line x1="50" y1="50" x2="75" y2="50" stroke="currentColor" stroke-width="3" stroke-linecap="round">
              <animateTransform
                attributeName="transform"
                attributeType="XML"
                type="rotate"
                from="0 50 50"
                to="360 50 50"
                dur="3600s"
                repeatCount="indefinite"
              />
            </line>
          </svg>
        <p class="text-gray-700 mb-4 font-medium">Duraci√≥n del efecto: {treatment.effectDuration}</p>
        <div>
          <h3 class="font-semibold text-gray-800 mb-2">Cuidados posteriores:</h3>
          <ul class="list-disc list-inside text-gray-600 space-y-1">
            {treatment.postCare.map((care) => (
              <li>{care}</li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  ))}
</div>
---