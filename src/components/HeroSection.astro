---
// Importamos los iconos SVG directamente
const sparklesIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/><path d="M5 3v4"/><path d="M19 17v4"/><path d="M3 5h4"/><path d="M17 19h4"/></svg>`;
const zapIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>`;
const dropletIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22a7 7 0 0 0 7-7c0-2-1-3.9-3-5.5s-3.5-4-4-6.5c-.5 2.5-2 4.9-4 6.5C6 11.1 5 13 5 15a7 7 0 0 0 7 7z"/></svg>`;

---

<section class="w-full py-12 md:py-24 lg:py-32 bg-gradient-to-br from-pink-50 to-purple-50">
  <div class="container px-4 md:px-6">
    <div class="flex flex-col items-center justify-center space-y-4 text-center">
      
      

      
      <section class="bg-gradient-to-r from-pink-100 via-purple-200 to-indigo-300 py-12 rounded-lg">
        <div class="container mx-auto px-4 text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Belleza y Confianza en cada tratamiento</h1>
          <p class="text-xl text-gray-600 mb-8">Descubre la libertad de una piel suave y cejas perfectas con nuestra depilación láser de diodo y microblading de última generación.</p>
          <div class="space-x-4">
            <a href="#contacto" class="bg-cyan-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-cyan-900 transition duration-300">Reserva tu Cita</a>
            <a href="#servicios" class="bg-white text-primary px-6 py-3 rounded-full font-semibold hover:bg-gray-100 transition duration-300">Más Información</a>
          </div>
        </div>
      </section>




    </div>
    <div class="mx-auto grid max-w-5xl items-center gap-6 py-12 lg:grid-cols-3">
      <div class="flex flex-col items-center space-y-4 text-center">
        <div class="flex h-20 w-20 items-center justify-center rounded-full bg-pink-100">
          <span class="h-10 w-10 text-pink-500" set:html={sparklesIcon} />
        </div>
        <h3 class="text-xl font-bold">Rejuvenecimiento Facial</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400">Renueva tu piel con nuestros tratamientos láser de última generación</p>
      </div>
      <div class="flex flex-col items-center space-y-4 text-center">
        <div class="flex h-20 w-20 items-center justify-center rounded-full bg-purple-100">
          <span class="h-10 w-10 text-purple-500" set:html={zapIcon} />
        </div>
        <h3 class="text-xl font-bold">Depilación Láser</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400">Di adiós al vello no deseado con nuestra tecnología láser avanzada</p>
      </div>
      <div class="flex flex-col items-center space-y-4 text-center">
        <div class="flex h-20 w-20 items-center justify-center rounded-full bg-blue-100">
          <span class="h-10 w-10 text-blue-500" set:html={dropletIcon} />
        </div>
        <h3 class="text-xl font-bold">Hidratación Profunda</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400">Revitaliza tu piel con nuestros tratamientos de hidratación intensiva</p>
      </div>
    </div>
  </div>
</section>