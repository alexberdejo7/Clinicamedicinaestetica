        <a href="../../public/img/assets/temario.pdf" target="_blank" rel="noopener noreferrer"
           class="block w-full mt-5 bg-blue-dark hover:bg-Azul-Strong text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 text-center text-sm sm:text-base">
          Ver Temario Completo
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const benefits = [
      "Aprende técnicas avanzadas de microblading",
      "Certificación con validez oficial",
      "Prácticas con modelos reales",
      "Material completo incluido",
      "Desarrolla habilidades en rotaciones clínicas"
    ];

    const initialModules = [
      "Micropigmentación: Conceptos e indicaciones",
      "Pigmentos: Ingredientes y técnicas de implante",
      "Histología de la piel",
      "Dermografo inductores y navajas",
      "Teoria del color y reglas basicas",
      "Diseño de ceja y diseño medico"
    ];

    const additionalModules = [
      "Anesteria: generalidades e indicaciones",
      "Retoque y etapas de citatrizacion",
      "Asepsia y Antisepsia",
      "Tips y marketing de publicidad",
      "Valoracion de paciente",
      "Documentos legales para las buenas practicas",
      "Reflexiones Finales"
    ];

    let modulesVisible = false;

    function populateList(items, listId) {
      const list = document.getElementById(listId);
      list.innerHTML = '';
      items.forEach(item => {
        const li = document.createElement('li');
        li.className = 'flex items-start';
        li.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 text-green-500 mr-2 flex-shrink-0 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs sm:text-xs">${item}</span>
        `;
        list.appendChild(li);
      });
    }

    // Poblamos la lista de beneficios
    populateList(benefits, 'benefits-list');

    // Manejo del botón de "Ver más" para el temario
    document.getElementById('view-more-btn').addEventListener('click', () => {
      const modulesList = document.getElementById('modules-list');
      modulesVisible = !modulesVisible;

      if (modulesVisible) {
        populateList(initialModules.concat(additionalModules), 'modules-list');
        document.getElementById('view-more-btn').innerText = 'Ver menos';
      } else {
        populateList(initialModules, 'modules-list');
        document.getElementById('view-more-btn').innerText = 'Ver más';
      }
    });

    // Inicialmente solo mostramos los módulos principales
    populateList(initialModules, 'modules-list');
  });
</script>