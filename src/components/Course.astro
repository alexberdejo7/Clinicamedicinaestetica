<script>
  document.addEventListener("DOMContentLoaded", () => {
    const video = document.getElementById("video-presentacion") as HTMLVideoElement;


    if ("IntersectionObserver" in window) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              video.play();
              observer.unobserve(video); // Detiene la observación después de reproducir
            }
          });
        },
        { threshold: 0.5 } // Se activa cuando el 50% del video es visible
      );

      observer.observe(video);
    } else {
      // Fallback para navegadores antiguos
      video.play();
    }
  });
</script>
