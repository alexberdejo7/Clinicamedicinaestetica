
---
import { services } from '../utils/services.js';
---


<section id="servicios" class="py-16 mt-7 bg-nude-bg">
    <div class="mx-auto max-w-7xl px-3">
        <h2 
        data-aos="fade-down"
     data-aos-easing="linear"
     data-aos-duration="1500"
        class="text-4xl  font-semibold font-neoteric mb-5 text-center text-nude-text">¿Que ofrecemos?</h2>
        
        <p 
        data-aos="fade-up"
        data-aos-duration="1500"
        class="font-poppins  text-nude-text text-center text-xs md:text-sm  max-w-80 mx-auto mb-10 font-thin">  Innovación, confianza y resultados visibles. Conoce aqui nuestros procedimientos: </p>
        
<!-- ServiceCards -->

        <div 
            class="grid grid-cols-1 p-4 md:grid-cols-2 mx-auto xl:grid-cols-3 md:gap-x-5 gap-y-14 lg:gap-x-8">
            {services.map((service, index) => (
              <div 
                class="group bg-white rounded-2xl shadow-md overflow-hidden transform transition duration-500 hover:shadow-xl hover:scale-[1.015] flex flex-col"
                data-aos={index % 2 === 0 ? 'fade-up' : 'fade-down'}
                data-aos-duration="1000"
                data-aos-delay={index * 100}
              >
                <!-- Imagen principal -->
                <div class="relative">
                  <img 
                    src={service.imageList} 
                    alt={service.name} 
                    class="w-full h-48 object-cover brightness-90 group-hover:brightness-100 transition duration-300"
                    loading="lazy"
                  />
                  <div class="absolute bottom-2 left-2 bg-nude-bg/90 px-3 py-1 rounded-full text-xs font-semibold text-nude-text shadow font-poppins">
                    {service.name}
                  </div>
                </div>
            
                <!-- Contenido -->
                <div class="flex flex-col justify-between flex-grow p-5">
                  <!-- Icono y descripción -->
                  <div class="flex items-start gap-3 mb-4">
                    <img 
                      src={service.icon} 
                      alt={`${service.name} icon`} 
                      class="w-6 h-6 object-contain"
                    />
                    <p class="text-nude-text text-xs lg:text-sm font-montserrat leading-snug max-w-[90%]">
                      {service.description}
                    </p>
                  </div>
            
                  <!-- Botón -->
                  <div class="mt-auto w-full">
                    <button
  aria-label={`Ver detalles sobre ${service.name}`}
  class="ver-mas-btn w-full bg-nude-clinica text-white font-poppins text-xs font-medium py-3 rounded-xl shadow-md hover:shadow-lg hover:scale-[1.015] transition-all duration-300 ease-in-out"
  data-id={service.id}
>
  Ver Detalles
</button>
                  </div>
                </div>
              </div>
            ))}
            
            
        </div>
    
  
        <div id="service-details" class=" bg-nude-primary mt-10  p-8 rounded-lg shadow-sm hidden max-w-7xl mx-auto">
          <h2 id="service-title" class="text-xl lg:text-2xl font-neoteric font-semibold mb-4 text-nude-text text-center"></h2>
          <p id="service-description" class="mb-6 p-7 text-start text-balance font-poppins leading-relaxed mt-7 text-sm md:text-base xl:text-base text-nude-text "></p>
          
          <!-- Updated container for service images -->
          <div id="service-images" class="flex flex-wrap justify-center gap-7 mb-10">
            <img class="w-80 h-auto sm:w-96 md:w-[400px] lg:w-[450px] object-contain rounded-xl shadow-lg m-2 transition-all duration-300 hover:scale-105" 
            src="" 
            alt="Servicio image " 
            loading="lazy">
       <img class="w-80 h-auto sm:w-96 md:w-[400px] lg:w-[450px] object-contain rounded-xl shadow-lg m-2 transition-all duration-300 hover:scale-105" 
            src="" 
            alt="Servicio image " 
            loading="lazy">
          </div>
          
          <h3 class="text-xl font-semibold font-roboto mb-4 text-nude-text text-center">Preguntas Frecuentes</h3>
          <ul id="service-faqs" class="space-y-4"></ul>
      </div>
    </div>