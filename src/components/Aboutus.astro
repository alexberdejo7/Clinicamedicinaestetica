  { id: 5, image: '/img/assets/instalaciones4.webp', alt: 'Foto 4' },
  { id: 2, image: '/img/assets/instalaciones1.webp', alt: 'Foto 1' },
  { id: 6, image: '/img/assets/instalaciones5.webp', alt: 'Foto 5' },
  { id: 3, image: '/img/assets/instalaciones2.webp', alt: 'Foto 2' },
  { id: 8, image: '/img/assets/insta9.webp', alt: 'Arte ' },
  { id: 1, image: '/img/assets/instalaciones.webp', alt: 'Arte ' },
  { id: 9, image: '/img/assets/insta8.webp', alt: 'Arte ' },
 

];

const teamMembers = [
  { id: 1, name: 'Ivette Aviles', role: 'Lic. en Cosmetologia y Estética corporal', image: '/img/assets/a.webp' },
  { id: 2, name: 'Sandra López', role: 'Nutriologa', image: '/img/assets/b.webp' },
  { id: 3, name: 'Sarah Tovar', role: 'Lic. en Cosmetologia y Estética corporal', image: '/img/assets/sarah.webp' },
  { id: 4, name: 'Karina Galindo', role: 'Manager', image: '/img/assets/o.webp' },
];

const mainDoctors = [
  { 
    id: 1, 
    name: 'Dra. Jessica Alcala', 
    role: 'Médico Cirujano, Maestria en Medicina Estetica y Longevidad Y Especialidad en Estetica Facial  Céd. Prof. 11911567 | 13113841 | 14834489',
    image: '/img/assets/biojess.webp' 
  },
  { 
    id: 2, 
    name: 'Dra. Lizette Piña', 
    role: 'Médico Cirujano.  Céd. Prof. 11317288 ',
    image: '/img/assets/logos.webp' 
  }
];
---

<section id="about-us" class="bg-nude-bg w-full overflow-hidden">
  <div class="container mx-auto p-2 sm:p-5 max-w-screen-xl">
    <h2 
        data-aos="zoom-out"
        data-aos-duration="1500"
        class="text-3xl p-4 sm:text-4xl xl:text-5xl font-semibold font-neoteric text-nude-text mt-10 text-center mb-5">
      Clínica Medicina Estética
    </h2>
    <p 
        data-aos="zoom-in"
        data-aos-duration="1500"
        class="text-xs text-balance p-4 md:text-sm text-nude-text font-poppins leading-relaxed text-center mb-12 lg:max-w-[40rem] mx-auto">
      Ofrecemos una <span class="font-semibold">experiencia de bienestar exclusiva y personalizada, </span>
      diseñada para mejorar tu bienestar y potenciar tu belleza.
      Nuestra atención es integral y todo el equipo <span class="font-semibold">trabajamos en sinergia para proporcionar la mejor atención </span> y
      los mejores cuidados centrados en ti.
    </p>
  </div>
</section>

<div class="bg-nude-bg max-w-full overflow-hidden">
  <div class="container mx-auto p-4 mb-10 sm:p-5 max-w-screen-xl">
    <h2 
        data-aos="zoom-out"
        data-aos-duration="1500"
        class="text-3xl p-4 sm:text-4xl text-center font-neoteric text-nude-text p-4 font-semibold mb-2">
      Quienes Somos
    </h2>
    <p 
        data-aos="zoom-in"
        data-aos-duration="1500"
        class="text-xs text-balance p-4 md:text-sm text-nude-text font-poppins leading-relaxed text-center mb-10 lg:max-w-[40rem] mx-auto">
      Nuestro equipo está conformado por <span class="font-semibold">especialistas apasionados y dedicados</span>, 
      comprometidos en brindarte una atención personalizada, con el 
      <span class="font-semibold">objetivo de ayudarte a lograr tus metas</span> de salud y belleza.
    </p>

    {/* Sección de doctoras principales */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-8 mb-16 max-w-4xl mx-auto">
      {mainDoctors.map(doctor => (
        <div class="text-center">
          <img 
              src={doctor.image} 
              alt={doctor.name} 
              data-aos="zoom-in"
              data-aos-duration="1500"
              class="w-40 h-40 md:w-64 md:h-64 lg:h-72 lg:w-72 rounded-full mx-auto mb-4 shadow-md shadow-gray-300 object-cover object-top border border-nude-text" 
              loading="lazy"
          />
          <p class="font-medium text-nude-text font-montserrat text-sm md:text-base mb-1">{doctor.name}</p>
          <p class="text-gray-600 font-montserrat text-xs md:text-sm">{doctor.role}</p>
        </div>
      ))}
    </div>

    {/* Separador */}
    <div class="w-32 h-0.5 bg-nude-text mx-auto mb-8"></div>
    <h3 class="text-2xl sm:text-3xl w-full text-center font-neoteric text-nude-text font-semibold mb-8">
      Staff
    </h3>

    {/* Resto del equipo */}
    <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-2 gap-3 lg:gap-y-10">
      {teamMembers.map(member => (
        <div class="text-center">
          <img 
              src={member.image} 
              alt={member.name} 
              data-aos="zoom-in"
              data-aos-duration="1500"
              class="w-24 h-24 border border-nude-text md:w-48 md:h-48 lg:h-52 lg:w-52 rounded-full mx-auto mb-4 shadow-md shadow-gray-300 object-cover object-top max-w-full" 
              loading="lazy"
          />
          <p class="font-medium text-nude-text font-montserrat text-sm md:text-base mb-1">{member.name}</p>
          <p class="text-gray-600 font-montserrat text-xs md:text-sm">{member.role}</p>
        </div>
      ))}
    </div>
  </div>
</div>


<div class="mb-5 mt-7 w-full overflow-hidden bg-nude-bg">
  <div class="container mx-auto p-3 sm:p-5 max-w-screen-xl">
    <h2 
      data-aos="zoom-out"
      data-aos-duration="1500"
      class="text-3xl sm:text-4xl text-center font-neoteric text-nude-text p-4 font-semibold mb-4">
      Nuestras Instalaciones
    </h2>
    
    <p class="text-xs text-balance p-4 md:text-sm text-nude-text font-poppins leading-relaxed text-center mb-10 lg:max-w-[40rem] mx-auto">
      Descubre nuestras <span class="font-semibold">modernas y relajantes instalaciones</span>, 
      diseñadas para ofrecerte los mejores cuidados en un entorno de 
      <span class="font-semibold">confianza plena y tranquilidad.</span>
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6 auto-rows-[300px]">
      {assets.map((asset, index) => (
        <div 
          data-aos="zoom-in-up"
          data-aos-duration="1000"
          class={`
            rounded-lg overflow-hidden shadow-lg shadow-gray-300 
            transition-all duration-700 hover:scale-[1.02] hover:shadow-xl
            ${index === 0 ? 'md:col-span-2 md:row-span-2 lg:col-span-2 lg:row-span-2' : ''}
            ${index >= 1 && index <= 2 ? 'md:col-span-1 md:row-span-1' : ''}
            ${index >= 3 ? 'md:col-span-1 lg:col-span-1' : ''}
          `}
        >
          <div class="relative group w-full h-full overflow-hidden">
            <img 
              src={asset.image} 
              alt={asset.alt} 
              class="w-full h-full object-cover transition-all duration-700 group-hover:scale-110"
              loading={index > 2 ? "lazy" : "eager"}
            />
            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
          </div>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  @media (min-width: 768px) {
    .grid-cols-2 > div:first-child {
      aspect-ratio: 16/9;
    }
  }
  
  @media (min-width: 1024px) {
    .grid-cols-3 > div:first-child {
      aspect-ratio: 16/9;
    }
  }
</style>